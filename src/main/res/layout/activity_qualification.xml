<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/logo"
    android:layout_height="match_parent"
    tools:context=".QualificationActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:id="@+id/textview"
      android:layout_marginLeft="60dp"
       android:text="Enter your Mark Details"
       android:textColor="@color/white"
       android:textSize="26sp">

   </TextView>

   <ImageView
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:id="@+id/image"
       android:layout_below="@id/textview"
       android:layout_marginTop="20dp"
       android:background="@drawable/input"
       android:layout_marginLeft="100dp"
       android:src="@drawable/stu" />

   <TextView
       android:id="@+id/tv1"
       android:layout_width="110dp"
       android:layout_height="30dp"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="80dp"
       android:layout_below="@+id/image"
       android:gravity="center"
       android:text="Enter name"
              android:textColor="@color/black"
       android:textSize="20sp"></TextView>

   <EditText
       android:id="@+id/et1"
       android:layout_width="286dp"
       android:layout_height="38dp"
       android:layout_marginLeft="20dp"
       android:gravity="center"
       android:layout_below="@+id/image"
       android:drawableLeft="@drawable/ic_person"
       android:drawableTint="@color/black"
       android:layout_marginTop="80dp"
       android:layout_toRightOf="@+id/tv1"
       android:layout_marginRight="15dp"
       android:background="@drawable/input">

   </EditText>

   <TextView
       android:layout_width="110dp"
       android:layout_height="30dp"
       android:id="@+id/tv2"
         android:textColor="@color/black"
      android:layout_below="@+id/tv1"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="36dp"
      android:text="Enter Dno"
      android:textSize="20sp">

   </TextView>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@id/et1"
       android:layout_marginLeft="20dp"
       android:background="@drawable/input"
       android:drawableLeft="@drawable/ic_dno"
       android:drawableTint="@color/black"
       android:gravity="center"
       android:layout_marginRight="15dp"
       android:id="@+id/et2"
     android:layout_marginTop="20dp"
       android:layout_toRightOf="@+id/tv2"
       tools:ignore="DuplicateIds">


   </EditText>

   <TextView
       android:layout_width="110dp"
       android:layout_height="30dp"
       android:textColor="@color/black"
       android:id="@+id/tv3"
       android:layout_marginLeft="20dp"
       android:layout_below="@+id/tv2"
       android:layout_marginTop="26dp"
       android:text="Enter SSLC"
       android:textSize="20sp">

   </TextView>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@id/et2"
       android:layout_marginLeft="20dp"
       android:background="@drawable/input"
       android:gravity="center"
       android:drawableLeft="@drawable/ic_baseline_school_24"
       android:drawableTint="@color/black"
       android:layout_marginRight="15dp"
       android:id="@+id/et3"
       android:layout_marginTop="20dp"
       android:layout_toRightOf="@+id/tv3">


   </EditText>

   <TextView
       android:layout_width="110dp"
       android:layout_height="30dp"
       android:id="@+id/tv4"
       android:layout_below="@+id/tv3"
       android:layout_marginLeft="20dp"
       android:textColor="@color/black"
       android:layout_marginTop="26dp"
       android:text="Enter HSC"
       android:textSize="20sp">

   </TextView>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_below="@id/et3"
       android:layout_marginLeft="20dp"
       android:background="@drawable/input"
       android:id="@+id/et4"
       android:layout_marginTop="20dp"
       android:drawableLeft="@drawable/ic_baseline_school_24"
       android:drawableTint="@color/black"
       android:gravity="center"
       android:layout_marginRight="15dp"
       android:layout_toRightOf="@+id/tv4"
       tools:ignore="DuplicateIds">


   </EditText>


   <TextView
       android:layout_width="110dp"
       android:layout_height="30dp"
       android:id="@+id/tv5"
       android:textColor="@color/black"
       android:layout_marginLeft="20dp"
       android:layout_below="@+id/tv4"
       android:layout_marginTop="30dp"

       android:text="Enter UG"
       android:textSize="20sp">

   </TextView>

   <EditText
       android:id="@+id/et5"
       android:layout_width="259dp"
       android:layout_height="39dp"
       android:layout_below="@id/et4"
       android:layout_marginLeft="20dp"
       android:gravity="center"
       android:drawableLeft="@drawable/ic_baseline_school_24"
       android:drawableTint="@color/black"
       android:layout_marginTop="20dp"
       android:layout_toRightOf="@+id/tv5"
       android:layout_marginRight="15dp"
       android:background="@drawable/input">
   </EditText>

   <TextView
       android:layout_width="110dp"
       android:layout_height="30dp"
       android:id="@+id/tv6"
       android:textColor="@color/black"
       android:layout_marginLeft="20dp"
       android:layout_below="@+id/tv5"
       android:layout_marginTop="30dp"

       android:text="Enter PG"
       android:textSize="20sp">

   </TextView>

   <EditText
       android:id="@+id/et6"
       android:layout_width="259dp"
       android:layout_height="39dp"
       android:layout_below="@id/et5"
       android:layout_marginLeft="20dp"
       android:gravity="center"
       android:drawableLeft="@drawable/ic_baseline_school_24"
       android:drawableTint="@color/black"
       android:layout_marginTop="20dp"
       android:layout_toRightOf="@+id/tv5"
       android:layout_marginRight="15dp"
       android:background="@drawable/input">


   </EditText>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:background="@drawable/input"
       android:id="@+id/button"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:text="Submit"
      android:textSize="26sp"
      android:layout_marginLeft="140dp"
      android:layout_marginTop="40dp"
      android:layout_below="@id/et6">

   </Button>


   <EditText
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:background="@drawable/input"
      android:id="@+id/resume"
       android:inputType="textUri"
      android:hint="Upload your Resume here"
      android:layout_centerVertical="true"
      android:layout_below="@+id/button"
      android:layout_marginTop="40dp"
      android:textColor="@color/black"
      android:textSize="22sp"
      android:layout_centerHorizontal="true">

   </EditText>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:id="@+id/upload"
      android:textSize="16sp"
      android:text="Upload"
      android:textAllCaps="false"
       android:textColor="@color/black"
      android:layout_below="@+id/resume"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
      android:layout_marginTop="20dp">

   </Button>



</RelativeLayout>
</ScrollView>

